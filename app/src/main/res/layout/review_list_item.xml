<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="450dp">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/review_user_image"
                android:layout_width="58dp"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/profile"
                app:civ_border_width="4dp"
                app:civ_shadow_radius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.049"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="MissingClass,MissingConstraints" />

            <kr.hs.emirim.seungmin.javaproject_azaz.MyFontTextViewBold
                android:id="@+id/review_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="UserName"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/review_user_image"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/review_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="category"
                android:textColor="#D500F9"
                app:layout_constraintStart_toEndOf="@+id/review_item_brand"
                app:layout_constraintTop_toBottomOf="@+id/review_item_name" />

            <ImageView
                android:id="@+id/review_image1"
                android:layout_width="92dp"
                android:layout_height="87dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/review_user_image"
                app:srcCompat="@drawable/add_image" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="87dp"
                android:layout_height="87dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toEndOf="@+id/review_image1"
                app:layout_constraintTop_toBottomOf="@+id/review_user_image"
                app:srcCompat="@drawable/add_image" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="26dp"
                android:layout_height="27dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/review_item_price"
                app:srcCompat="@drawable/mood_good" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="26dp"
                android:layout_height="25dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView14"
                app:srcCompat="@drawable/mood_bad" />

            <TextView
                android:id="@+id/review_item_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:text="Good"
                app:layout_constraintStart_toEndOf="@+id/imageView14"
                app:layout_constraintTop_toBottomOf="@+id/review_item_price" />

            <TextView
                android:id="@+id/review_item_bad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="Bad"
                app:layout_constraintStart_toEndOf="@+id/imageView15"
                app:layout_constraintTop_toBottomOf="@+id/review_item_good" />

            <kr.hs.emirim.seungmin.javaproject_azaz.MyFontTextViewBold
                android:id="@+id/review_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="item_name"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/review_image1" />

            <TextView
                android:id="@+id/review_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="item_price"
                android:textColor="#D500F9"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/review_item_name" />

            <TextView
                android:id="@+id/review_item_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="item_brand"
                android:textColor="#D500F9"
                app:layout_constraintStart_toEndOf="@+id/review_item_price"
                app:layout_constraintTop_toBottomOf="@+id/review_item_name" />

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="26dp"
                android:layout_height="25dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView15"
                app:srcCompat="@drawable/recommend_child" />

            <TextView
                android:id="@+id/review_item_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="Recommend"
                app:layout_constraintStart_toEndOf="@+id/imageView16"
                app:layout_constraintTop_toBottomOf="@+id/review_item_bad" />

            <TextView
                android:id="@+id/item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="2020.09.26"
                android:textStyle="italic"
                app:layout_constraintStart_toEndOf="@+id/review_user_image"
                app:layout_constraintTop_toBottomOf="@+id/review_user_name" />

            <ImageView
                android:id="@+id/like_btn"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_marginStart="110dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toEndOf="@+id/item_date"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/like_btn_image" />

            <TextView
                android:id="@+id/item_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:text="0 Like"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/item_date"
                app:layout_constraintTop_toBottomOf="@+id/like_btn" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>